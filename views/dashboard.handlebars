<div class="dashboard">
  <h1>Dashboard</h1>
  <p>Welcome, {{username}}! Manage your blog posts below.</p>

  <!-- Section to display user's blog posts -->
  <section id="user-posts">
    <h2>Your Blog Posts</h2>

    {{#each posts}}
      <article class="post">
        <h3>{{this.title}}</h3>
        <p>{{this.content}}</p>
        <p><small>Posted on: {{this.createdAt}}</small></p>
        <div class="post-actions">
          <button class="edit-btn" data-id="{{this.id}}">Edit</button>
          <button class="delete-btn" data-id="{{this.id}}">Delete</button>
        </div>
      </article>
    {{else}}
      <p>You haven't written any posts yet. Create one below!</p>
    {{/each}}
  </section>

  <!-- Section to add a new blog post -->
  <section id="new-post">
    <h2>Create a New Blog Post</h2>
    <form id="new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input type="text" id="post-title" name="title" required>
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea id="post-content" name="content" rows="5" required></textarea>
      </div>
      <button type="submit">Submit</button>
    </form>
  </section>
</div>
